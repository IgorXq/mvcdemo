@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model string

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Mvc routing issue</title>

    <!-- Bootstrap -->
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css " rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-light bg-faded">
        <a class="navbar-brand active" asp-action="Same" asp-route-tenantId="@Model">Check this link, it is incorrect and leads to POST action</a>
    </nav>
    <nav class="navbar navbar-light bg-faded">
        <a class="navbar-brand " asp-action="Unique" asp-route-tenantId="@Model">Check this link, it is correct because there is no POST action</a>
    </nav>
    <nav class="navbar navbar-light bg-faded">
        <a class="navbar-brand " asp-action="ActionFirst" asp-route-tenantId="@Model">This link is correct because of route pattern, regardless of HttpPost action</a>
    </nav>

    
    <hr />


</body>
</html>